<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget31"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<ProgressBar
android:layout_width="64dip" android:layout_height="64dip"
android:indeterminate="true"
android:layout_alignParentTop="true"
android:layout_alignParentRight="true"
android:id="@+id/progress"/>

<TextView android:layout_width="wrap_content" android:layout_height="64dip" 
android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textProgress"

android:text="TextView" android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/progress" 
android:gravity="right|center_vertical" android:textColor="#FFFF00" android:textStyle="bold" android:typeface="normal"/>

</RelativeLayout>
